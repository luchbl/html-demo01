		.page-detail.py-5
			.container
				.row.brief.mb-4
					.col-slide.col-md-6.mb-4
						.carousel-wrapper
							.carousel-nav-wrap
								.carousel-nav
									- n = 2
									.carousel-cell
										.thumb-res.square.mb-0.is-nav-selected: +img('products/1.jpg')(class="fit-cover")
									while n <= 4
										.carousel-cell
											.thumb-res.square.mb-0: +img('products/'+n+++'.jpg')(class="fit-cover")
							.carousel-main
								.carousel-cell
									+a('css/skin/products/1.jpg', 'thumb-res square mb-0')(data-fancybox="pd" title="" alt=""): +img('products/1.jpg')
								.carousel-cell
									+a('css/skin/products/2.jpg', 'thumb-res square mb-0')(data-fancybox="pd" title="" alt=""): +img('products/2.jpg')
								.carousel-cell
									+a('css/skin/products/3.jpg', 'thumb-res square mb-0')(data-fancybox="pd" title="" alt=""): +img('products/3.jpg')
								.carousel-cell
									+a('css/skin/products/4.jpg', 'thumb-res square mb-0')(data-fancybox="pd" title="" alt=""): +img('products/4.jpg')

					.col-info.col-md-6.mb-4.pl-xl-4
						h2.tt-lg.tt-pd Khẩu trang cao cấp BN95 Bảo Minh
						hr
						.msp.text-muted Mã SP: 0123455
						.text-single !{'<span class="text-success">Còn hàng</span>'}
						.block-price.mt-2
							.price
								span.price-sale 799,000!{'<u>đ</u>'}
								del.price-origin 999,000!{'<u>đ</u>'}
						.block-desc.mt-3
							| Lorem Ipsum is simply dummy text of the printing and typesetting industry. Standard dummy text ever since the 1500s.
						.button-grid-half.mt-3
							button.btn.btn-primary Thêm vào giỏ
							+a('cart.html', 'btn btn-danger', 'Đặt hàng')
						.block-note.mt-4
							.picon 
								span.far.fa-award
								| Sản phẩm chính hãng 100%
							.picon 
								span.far.fa-phone.fa-flip-horizontal
								| Hỗ trợ bán hàng: 
								br
								+phone_a('text-nowrap')
									+phone_text()
									|  (Mr. Thạnh) 
								span  -  
								+phone_a2('text-nowrap')
									+phone_text2()
									|  (Ms. Trâm) 
							.picon 
								span.far.fa-truck
