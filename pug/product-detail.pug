extends template/template
block vars
	- title = 'Sản phẩm'
	- menu_active = 'products'
	- wrapper_class = ''
	- wrapper_id = ''
	- home_slider = false
	- banner_top = true
	- banner_image = 'banner.jpg'
	- login = false

append breadcrumb 
	+breadcrumb({'product.html': 'Sản phẩm', 'products.html':'Khẩu trang Y tế'}, 'Khẩu trang cao cấp BN95 Bảo Minh')
block mainer
