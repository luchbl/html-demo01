doctype
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title Email
		link(href="css/library.min.css" rel="stylesheet")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
	body
		header.e-header.border-bottom
			.container-fluid.h-100.px-4.d-flex.align-items-center.justify-content-between
				.tt-xs.mb-0.text-nowrap Email Template
				.item.text-muted.fs-15.d-none.d-md-block !{'<a href="index.html">Home</a>'}   -   About   -   Login   -   Register   -   User Manager   -   Profile
		.e-wrapper
			aside.e-sidebar.border-end.d-flex.pl-2
				.nav.list-group.list-group-flush
					a.nav-link.active(href="#email-admin" data-bs-toggle="tab" aria-selected="true") Email Admin
					a.nav-link(href="#email-customer" data-bs-toggle="tab" aria-selected="false") Email Customer
					a.nav-link(href="#email-invoid" data-bs-toggle="tab" aria-selected="false") Email Invoid
					a.nav-link(href="#email-marketing" data-bs-toggle="tab" aria-selected="false") Email Marketing
			main.e-mainer
				.tab-content.p-0.m-0.h-100.w-100
					.h-100.tab-pane.fade.active.show#email-admin
						iframe(src="email/email-admin.html" width="100%" height="100%")
					.h-100.tab-pane.fade#email-customer
						iframe(src="email/email-customer.html" width="100%" height="100%")
					.h-100.tab-pane.fade#email-invoid
						iframe(src="email/email-invoid.html" width="100%" height="100%")
					.h-100.tab-pane.fade#email-marketing
						iframe(src="email/email-marketing.html" width="100%" height="100%")
		style.
			.e-header {
				height: 70px;
				border-bottom: 1px solid #ddd;
			}
			.e-wrapper {
				display: grid;
				grid-template-columns: 250px auto;
				height: calc(100% - 70px);
			}